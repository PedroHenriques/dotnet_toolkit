<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Library</OutputType>
    <Version>2.2.0</Version>
    <PackageId>PJHToolkit.Asp</PackageId>
    <IsPackable>true</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.17"></PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="9.0.1"></PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(UseLocalToolkit)' == 'true'">
    <ProjectReference Include="..\Toolkit\Toolkit.csproj"></ProjectReference>
  </ItemGroup>
  <ItemGroup Condition="'$(UseLocalToolkit)' != 'true'">
    <PackageReference Include="PJHToolkit" Version="5.0.0"></PackageReference>
  </ItemGroup><!-- ðŸ‘‡ Default to using NuGet package -->
</Project>
